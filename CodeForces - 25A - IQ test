#include<bits/stdc++.h>

using namespace std;

int main()
{

    int t,a[1000],b,c,m = 0, n = 0;

    cin>>t;

    for(int i = 0; i < t; i++)
    {

        cin>>a[i];

        if(a[i] % 2 == 0)
        {
            m++;
            b = i+1;
        }
        else
        {
            n++;
            c = i+1;
        }
    }

    if(m == 1)
        cout<<b<<endl;
    else
        cout<<c<<endl;

    return 0;

