#include<bits/stdc++.h>

using namespace std;

int main()
{
    int a,s = 0, m = 0, t;

    cin>>t;

    while(t--)
    {
        cin>>a;

        if(a == (-1))
        {
            if(m == 0)
                s++;
            else
                m--;
        }
        else
        {
            m += a;
        }
    }

    cout<<s<<endl;

}
